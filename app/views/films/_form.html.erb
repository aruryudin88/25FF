<%= form_for @film do |f| %>
  <% @film.class.presentative_attributes.each do |attribute| %>
    <%= content_tag :p do %>
      <%= f.label attribute %>:
      <%= @film.custom_field(attribute, f) %>
    <% end %>
  <% end %>
  <%= content_tag :p do %>
    <%= f.label "submit", t(:save) %>:
    <%= f.submit id: "film_submit" %>
  <% end %>
<% end %>
